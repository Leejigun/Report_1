<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/progress_horizontal"
            app:srcCompat="@drawable/ic_profile" />

        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toLeftOf="@+id/news_textView"
            android:layout_toRightOf="@+id/imageView2"
            android:background="@color/colorFacebook_grey" />

        <TextView
            android:id="@+id/news_textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView2"
            android:gravity="center"
            android:text="이지건"
            android:textAlignment="center"
            android:textSize="30sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toLeftOf="@+id/news_textView"
        android:layout_toRightOf="@+id/imageView2"
        android:background="@color/colorFacebook_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="274dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/img_boostcamp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017년 부스트 캠프 2기 사진"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toLeftOf="@+id/news_textView"
        android:layout_toRightOf="@+id/imageView2"
        android:background="@color/colorFacebook_grey" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="1,427명  댓글 136개 공유 12회"
            android:textColor="@color/black_light"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_toLeftOf="@+id/news_textView"
        android:layout_toRightOf="@+id/imageView2"
        android:background="@color/colorFacebook_grey" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/like_img" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/comment_img" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/share_img" />

    </LinearLayout>

</LinearLayout>
