<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFacebook"
    android:paddingLeft="0dp"
    app:layout_scrollFlags="scroll|enterAlways|snap">
    <!--layout_scrollFlags옵션은 툴바가 사라지는 조건 옵션-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/toolbar_direct"
            android:layout_width="50dp"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_direct" />

        <ImageView
            android:id="@+id/toolbar_messenger"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_messenger" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@+id/toolbar_messenger"
            android:layout_toRightOf="@+id/toolbar_direct"
            android:backgroundTint="@android:color/background_light"
            android:drawableLeft="@drawable/ic_search"
            android:drawableStart="@drawable/ic_search"
            android:hint="검색"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textSize="13sp" />

    </RelativeLayout>


</android.support.v7.widget.Toolbar>